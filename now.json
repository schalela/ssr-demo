{
  "version": 2,
  "name": "ssr-demo",
  "builds": [
    {
      "src": "no-ssr/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "ssr/next.config.js",
      "use": "@now/next"
    }
  ],
  "regions": [
    "syd1"
  ],
  "routes": [
    {
      "src": "/ssr/(.*)",
      "headers": {
        "cache-control": "no-cache",
        "set-cookie": "_now_no_cache=1; HttpOnly"
      },
      "dest": "/ssr/$1"
    },
    {
      "src": "/no-ssr/(.*)",
      "headers": {
        "cache-control": "no-cache"
      },
      "dest": "/no-ssr/$1"
    }
  ]
}