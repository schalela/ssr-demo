{
  "version": 2,
  "name": "ssr-demo",
  "builds": [
    {
      "src": "no-ssr/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "ssr/next.config.js",
      "use": "@now/next"
    }
  ],
  "regions": [
    "syd1"
  ],
  "routes": [
    {
      "src": "/ssr/(.*)",
      "dest": "/ssr/$1"
    },
    {
      "src": "/ssr/date/(?<date>[^/]+)$",
      "dest": "/ssr?date=$date"
    },
    {
      "src": "/no-ssr/date/(?<date>[^/]+)$",
      "dest": "/no-ssr?date=$date"
    },
    {
      "src": "/no-ssr/(.*)",
      "dest": "/no-ssr/$1"
    }
  ]
}